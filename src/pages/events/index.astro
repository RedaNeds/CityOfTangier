                <a href="/events/tanjazz-opening-night" class="text-teal-600 hover:text-teal-800 font-medium">View details ‚Üí</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Event 2 -->
        <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="flex items-start space-x-4">
