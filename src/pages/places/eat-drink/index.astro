---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all eat-drink places
const eatDrinkEntries = await getCollection('eatDrink');

// Group by category
const categories = eatDrinkEntries.reduce((acc, entry) => {
  const category = entry.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(entry);
  return acc;
}, {} as Record<string, typeof eatDrinkEntries>);

// Category display names and colors
const categoryInfo = {
  'rooftops': { name: 'Rooftops', icon: 'üè¢', color: 'from-orange-400 to-red-600' },
  'sea-view-cafes': { name: 'Sea-view Cafes', icon: '‚òï', color: 'from-blue-400 to-cyan-600' },
  'moroccan-restaurants': { name: 'Moroccan Restaurants', icon: 'üçΩÔ∏è', color: 'from-green-400 to-emerald-600' },
  'brunch-breakfast': { name: 'Brunch & Breakfast', icon: 'ü•ê', color: 'from-yellow-400 to-orange-500' },
  'seafood': { name: 'Seafood', icon: 'üêü', color: 'from-blue-500 to-indigo-600' },
  'vegetarian-vegan': { name: 'Vegetarian & Vegan', icon: 'üå±', color: 'from-green-500 to-teal-600' }
};
---

<BaseLayout 
  title="Eat & Drink in Tangier - Best Restaurants & Cafes"
  description="Discover the best places to eat and drink in Tangier. From rooftop bars to traditional Moroccan restaurants, find your perfect dining experience."
>
  <div class="max-w-7xl mx-auto px-4 py-16">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-serif font-bold text-gray-900 mb-6">Eat & Drink</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        From traditional Moroccan cuisine to modern cafes with stunning sea views, 
        discover Tangier's vibrant food and drink scene.
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {Object.entries(categories).map(([categoryKey, entries]) => {
        const category = categoryInfo[categoryKey as keyof typeof categoryInfo];
        if (!category) return null;
        
        return (
          <div class="bg-white rounded-2xl border border-[#F0F0F0] overflow-hidden transition-all hover:shadow-lg">
            <div class={`h-48 bg-gradient-to-br ${category.color} flex items-center justify-center`}>
              <div class="text-center text-white">
                <div class="text-4xl mb-2">{category.icon}</div>
                <h3 class="text-xl font-bold">{category.name}</h3>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-3">{category.name}</h3>
              <p class="text-gray-600 mb-4">
                {categoryKey === 'rooftops' && 'Stunning rooftop bars and restaurants with panoramic views.'}
                {categoryKey === 'sea-view-cafes' && 'Perfect spots for coffee with a view of the Strait of Gibraltar.'}
                {categoryKey === 'moroccan-restaurants' && 'Authentic Moroccan cuisine in traditional settings.'}
                {categoryKey === 'brunch-breakfast' && 'Start your day right with the best breakfast spots.'}
                {categoryKey === 'seafood' && 'Fresh seafood from the Atlantic and Mediterranean.'}
                {categoryKey === 'vegetarian-vegan' && 'Plant-based options for conscious diners.'}
              </p>
              <div class="text-sm text-gray-500 mb-4">{entries.length} places</div>
              <a href={`/places/eat-drink/${categoryKey}`} class="inline-block text-teal-600 hover:text-teal-800 font-medium">
                Explore {category.name.toLowerCase()} ‚Üí
              </a>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Featured Places -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Featured Places</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {eatDrinkEntries.slice(0, 3).map(entry => {
          const category = categoryInfo[entry.data.category as keyof typeof categoryInfo];
          if (!category) return null;
          
          return (
            <div class="bg-white rounded-2xl border border-[#F0F0F0] overflow-hidden transition-all hover:shadow-lg">
              <div class={`h-48 bg-gradient-to-br ${category.color} flex items-center justify-center`}>
                <span class="text-white text-lg font-semibold">{entry.data.title}</span>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-2">{entry.data.title}</h3>
                <p class="text-gray-500 text-sm mb-3">{category.name}</p>
                <p class="text-gray-600 mb-4 line-clamp-3">{entry.data.description}</p>
                <div class="flex items-center justify-between">
                  <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-medium">Open now</span>
                  <a href={`/places/eat-drink/${entry.data.category}`} class="text-teal-600 hover:text-teal-800 font-medium">View details ‚Üí</a>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</BaseLayout>
