---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { client, imageUrlBuilder } from '../../lib/sanity';

// Fetch all nature sites from Sanity
const natureSites = await client.fetch(`
  *[_type == "nature"] | order(title asc) {
    _id,
    title,
    subtitle,
    slug,
    description,
    heroImage,
    terrainType,
    difficulty
  }
`);

// Helper function to get image URL from Sanity
function getImageUrl(image: any) {
  if (!image) return '/images/nature-default.jpg';
  const builder = imageUrlBuilder(client);
  return builder.image(image).url();
}

const pageTitle = "Nature & Parks in Tangier";
const pageDescription = "Discover Tangier's natural beauty through parks, gardens, nature reserves, and scenic outdoor spaces.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="bg-[#F5F1E8] min-h-screen">

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-green-700 to-emerald-600 text-white py-20">
      <div class="max-w-6xl mx-auto px-6">
        <h1 class="text-5xl font-serif mb-4">Nature & Parks in Tangier</h1>
        <p class="text-xl opacity-90 max-w-2xl">
          Escape to nature and explore the green spaces, parks, and natural wonders around Tangier
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <section class="max-w-6xl mx-auto px-4 py-12">

      {natureSites.length === 0 ? (
        <div class="text-center py-20">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">No Nature Sites Found</h2>
          <p class="text-gray-600">Check back soon for new nature and park listings!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {natureSites.map((site: any) => (
            <a
              href={`/nature/${site.slug.current}`}
              class="group bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300"
            >
              <div class="aspect-[4/3] overflow-hidden relative">
                <img
                  src={getImageUrl(site.heroImage)}
                  alt={site.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                {site.difficulty && (
                  <div class={`absolute top-4 right-4 px-3 py-1 rounded-full text-xs font-semibold text-white ${
                    site.difficulty === 'easy' ? 'bg-green-600' :
                    site.difficulty === 'moderate' ? 'bg-yellow-600' :
                    'bg-red-600'
                  }`}>
                    {site.difficulty.charAt(0).toUpperCase() + site.difficulty.slice(1)}
                  </div>
                )}
              </div>
              <div class="p-6">
                <h2 class="font-serif text-2xl text-[#2C2416] mb-2 group-hover:text-green-700 transition-colors">
                  {site.title}
                </h2>
                {site.terrainType && (
                  <p class="text-sm text-green-700 mb-3 capitalize">{site.terrainType.replace('-', ' ')}</p>
                )}
                <p class="text-[#5C5550] text-sm line-clamp-3">
                  {site.description}
                </p>
                <div class="mt-4 text-green-700 font-semibold text-sm group-hover:underline">
                  Explore ‚Üí
                </div>
              </div>
            </a>
          ))}
        </div>
      )}

    </section>

    <!-- Tips Section -->
    <section class="max-w-6xl mx-auto px-4 py-12">
      <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-3xl p-8 md:p-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Tips for Visiting Nature Sites</h2>

        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
              <span class="text-2xl">üåø</span>
              What to Bring
            </h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Comfortable walking shoes or hiking boots</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Sunscreen and hat for sun protection</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Water bottle - stay hydrated</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Binoculars for bird watching</span>
              </li>
            </ul>
          </div>

          <div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
              <span class="text-2xl">üåç</span>
              Respect Nature
            </h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Stay on marked trails to protect vegetation</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Take your trash with you - leave no trace</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Don't pick flowers or disturb wildlife</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-600 font-bold">‚Ä¢</span>
                <span>Visit during early morning for the best wildlife viewing</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>


