---
import HomeLayout from '../layouts/HomeLayout.astro';
import HeroSearchBar from '../components/HomePage/HeroSearchBar.astro';
import QuickCategories from '../components/HomePage/QuickCategories.astro';
---

<HomeLayout>
		<!-- Hero Section -->
		<section class="relative hero-gradient text-white min-h-[600px] flex items-center animate-fade-in-up">
			<div class="absolute inset-0 bg-black opacity-30"></div>
			<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
				<div class="text-center">
					<h1 class="text-5xl md:text-7xl font-serif font-bold mb-6">
						Your perfect Tangier experience
					</h1>
					<p class="text-xl md:text-2xl mb-12 max-w-4xl mx-auto font-light">
						Discover the magic where Africa meets Europe. From ancient kasbahs to modern rooftops, find your next adventure in Morocco's gateway city.
					</p>
					
					<!-- Search Bar -->
					<HeroSearchBar />
					
					<button class="bg-slate-800 text-white px-8 py-3 rounded-xl font-semibold hover:bg-slate-700 transition-colors">
						Plan your trip
					</button>
				</div>
			</div>
		</section>

		<!-- Quick Categories -->
		<QuickCategories />

		<!-- Things to do Section - Design System -->
		<section id="see-do" class="py-4xl bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Section Header -->
				<div class="flex justify-between items-center mb-3xl">
					<div>
						<h2 class="text-h1 font-display font-bold text-dark-brown mb-4">Things to do</h2>
						<p class="text-xl text-warm-gray font-primary">
							Discover the best attractions and experiences Tangier has to offer
						</p>
					</div>
					<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary flex items-center group transition-colors">
						See all
						<svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</a>
				</div>
				<!-- Cards Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-lg">
					<!-- Card 1: Kasbah Museum -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-teal to-dark-teal flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Kasbah Museum</span>
							</div>
							<div class="absolute top-4 right-4 bg-coral text-white px-3 py-1 rounded-full text-small font-medium">
								Open now
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Kasbah Museum</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Kasbah</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Explore Morocco's rich history in this beautifully restored 17th-century palace with stunning views.</p>
							<div class="flex flex-wrap gap-2 mb-4">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">museum</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">history</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">views</span>
							</div>
							<div class="text-lg font-semibold text-dark-brown">€</div>
						</div>
					</div>
					<!-- Card 2: Hercules Caves -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-warm-orange to-coral flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Hercules Caves</span>
							</div>
							<div class="absolute top-4 right-4 bg-coral text-white px-3 py-1 rounded-full text-small font-medium">
								Open now
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Hercules Caves</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Achakar</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Legendary cave with a natural window opening to the Atlantic Ocean, perfect for sunset views.</p>
							<div class="flex flex-wrap gap-2 mb-4">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">nature</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">sunset</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">legend</span>
							</div>
							<div class="text-lg font-semibold text-dark-brown">€</div>
						</div>
					</div>
					<!-- Card 3: Cap Spartel Lighthouse -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-deep-blue to-teal flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Cap Spartel Lighthouse</span>
							</div>
							<div class="absolute top-4 right-4 bg-coral text-white px-3 py-1 rounded-full text-small font-medium">
								Open now
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Cap Spartel Lighthouse</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Cap Spartel</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Historic lighthouse marking the meeting point of the Atlantic Ocean and Mediterranean Sea.</p>
							<div class="flex flex-wrap gap-2 mb-4">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">lighthouse</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">ocean</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">historic</span>
							</div>
							<div class="text-lg font-semibold text-dark-brown">€</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Food & drink Section - Design System -->
		<section id="eat-drink" class="py-4xl bg-light-beige">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Section Header -->
				<div class="flex justify-between items-center mb-3xl">
					<div>
						<h2 class="text-h1 font-display font-bold text-dark-brown mb-4">Food & drink</h2>
						<p class="text-xl text-warm-gray font-primary">
							From traditional mint tea to fresh seafood, taste the flavors of Tangier
						</p>
					</div>
					<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary flex items-center group transition-colors">
						See all
						<svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</a>
				</div>
				<!-- Cards Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-lg">
					<!-- Card 1: Café Hafa -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-gold to-warm-orange flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Café Hafa</span>
							</div>
							<div class="absolute top-4 right-4 bg-coral text-white px-3 py-1 rounded-full text-small font-medium">
								Open now
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Café Hafa</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Kasbah</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Historic café with stunning sea views, famous for its mint tea and bohemian atmosphere.</p>
							<div class="flex flex-wrap gap-2 mb-4">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">sea-view</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">historic</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">mint tea</span>
							</div>
							<div class="text-lg font-semibold text-dark-brown">€</div>
						</div>
					</div>
					<!-- Card 2: Restaurant Saveur de Poisson -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-light-teal to-teal flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Restaurant Saveur de Poisson</span>
							</div>
							<div class="absolute top-4 right-4 bg-coral text-white px-3 py-1 rounded-full text-small font-medium">
								Open now
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Restaurant Saveur de Poisson</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Medina</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Fresh seafood restaurant serving traditional Moroccan dishes with a modern twist.</p>
							<div class="flex flex-wrap gap-2 mb-4">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">seafood</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">traditional</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">family</span>
							</div>
							<div class="text-lg font-semibold text-dark-brown">€€</div>
						</div>
					</div>
					<!-- Card 3: Achakar Beach Club -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-coral to-soft-pink flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Achakar Beach Club</span>
							</div>
							<div class="absolute top-4 right-4 bg-coral text-white px-3 py-1 rounded-full text-small font-medium">
								Open now
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Achakar Beach Club</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Achakar</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Luxury beach club with cocktails, fresh seafood, and stunning Atlantic views.</p>
							<div class="flex flex-wrap gap-2 mb-4">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">beach</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">cocktails</span>
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">luxury</span>
							</div>
							<div class="text-lg font-semibold text-dark-brown">€€€</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- What's on Section - Design System -->
		<section id="events" class="py-4xl bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Section Header -->
				<div class="flex justify-between items-center mb-3xl">
					<div>
						<h2 class="text-h1 font-display font-bold text-dark-brown mb-4">What's on</h2>
						<p class="text-xl text-warm-gray font-primary">
							Events and experiences happening in Tangier this week
						</p>
					</div>
					<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary flex items-center group transition-colors">
						See all events
						<svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</a>
				</div>
				<!-- Events Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-lg">
					<!-- Event Card 1: Tanjazz Festival -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-deep-blue to-teal flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Tanjazz Festival</span>
							</div>
							<div class="absolute top-4 left-4 bg-white text-dark-brown px-3 py-1 rounded-full text-small font-bold">
								SEP 21
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Tanjazz Festival</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Kasbah Amphitheater</p>
							<p class="text-warm-gray text-small mb-3 font-primary">Sat, Sep 21, 08:00 PM</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">International jazz festival featuring world-class musicians in the historic Kasbah amphitheater.</p>
							<div class="flex justify-between items-center">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">music</span>
								<button class="bg-gradient-to-r from-teal to-dark-teal text-white px-4 py-2 rounded-lg text-small font-medium font-primary hover:from-teal/90 hover:to-dark-teal/90 transition-all duration-300">
									Get Tickets
								</button>
							</div>
						</div>
					</div>
					<!-- Event Card 2: Contemporary Art at the Kasbah -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-warm-orange to-coral flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Contemporary Art at the Kasbah</span>
							</div>
							<div class="absolute top-4 left-4 bg-white text-dark-brown px-3 py-1 rounded-full text-small font-bold">
								SEP 25
							</div>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Contemporary Art at the Kasbah</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">Kasbah Museum</p>
							<p class="text-warm-gray text-small mb-3 font-primary">Wed, Sep 25, 06:00 PM</p>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Exhibition showcasing contemporary Moroccan and international artists in the historic museum.</p>
							<div class="flex justify-between items-center">
								<span class="bg-light-beige text-dark-brown px-3 py-1 rounded-full text-small font-medium">culture</span>
								<button class="bg-gradient-to-r from-warm-orange to-coral text-white px-4 py-2 rounded-lg text-small font-medium font-primary hover:from-warm-orange/90 hover:to-coral/90 transition-all duration-300">
									Learn More
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Guides Section - Design System -->
		<section id="guides" class="py-4xl bg-light-beige">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Section Header -->
				<div class="flex justify-between items-center mb-3xl">
					<div>
						<h2 class="text-h1 font-display font-bold text-dark-brown mb-4">Guides</h2>
						<p class="text-xl text-warm-gray font-primary">
							Local insights and expert recommendations for the perfect Tangier experience
						</p>
					</div>
					<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary flex items-center group transition-colors">
						Read all guides
						<svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</a>
				</div>
				<!-- Guides Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-lg">
					<!-- Guide Card 1: Best rooftops for sunset -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-gold to-warm-orange flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Best rooftops for sunset</span>
							</div>
							<div class="absolute top-4 left-4 bg-white text-dark-brown px-3 py-1 rounded-full text-small font-bold">
								Views
							</div>
						</div>
						<div class="p-6">
							<p class="text-warm-gray text-small mb-2 font-primary">5 min read • by Local Guide</p>
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Best rooftops for sunset in Tangier</h3>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Discover the most spectacular rooftop bars and terraces for watching the sunset over the Strait of Gibraltar.</p>
							<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary group transition-colors">
								Read more 
								<span class="group-hover:translate-x-1 inline-block transition-transform">→</span>
							</a>
						</div>
					</div>
					<!-- Guide Card 2: Seafood guide to Tangier -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-light-teal to-teal flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">Seafood guide to Tangier</span>
							</div>
							<div class="absolute top-4 left-4 bg-white text-dark-brown px-3 py-1 rounded-full text-small font-bold">
								Food
							</div>
						</div>
						<div class="p-6">
							<p class="text-warm-gray text-small mb-2 font-primary">7 min read • by Food Expert</p>
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Seafood guide to Tangier</h3>
							<p class="text-warm-gray mb-4 font-primary leading-normal">From traditional fish markets to fine dining, explore Tangier's incredible seafood scene.</p>
							<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary group transition-colors">
								Read more 
								<span class="group-hover:translate-x-1 inline-block transition-transform">→</span>
							</a>
						</div>
					</div>
					<!-- Guide Card 3: First timer's guide to Tangier -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="relative">
							<div class="h-64 bg-gradient-to-br from-coral to-soft-pink flex items-center justify-center">
								<span class="text-white text-lg font-semibold font-primary">First timer's guide to Tangier</span>
							</div>
							<div class="absolute top-4 left-4 bg-white text-dark-brown px-3 py-1 rounded-full text-small font-bold">
								Guide
							</div>
						</div>
						<div class="p-6">
							<p class="text-warm-gray text-small mb-2 font-primary">10 min read • by Travel Writer</p>
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">First timer's guide to Tangier</h3>
							<p class="text-warm-gray mb-4 font-primary leading-normal">Everything you need to know for your first visit to Tangier, from getting around to must-see attractions.</p>
							<a href="#" class="text-teal hover:text-dark-teal font-medium font-primary group transition-colors">
								Read more 
								<span class="group-hover:translate-x-1 inline-block transition-transform">→</span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Explore by neighborhood Section - Design System -->
		<section id="neighborhoods" class="py-4xl bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<!-- Section Header -->
				<div class="text-center mb-3xl">
					<h2 class="text-h1 font-display font-bold text-dark-brown mb-4">Explore by neighborhood</h2>
					<p class="text-xl text-warm-gray font-primary">
						Each area of Tangier has its own character and charm
					</p>
				</div>
				<!-- Neighborhoods Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-lg">
					<!-- Neighborhood Card 1: Marshan -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="h-48 bg-gradient-to-br from-teal to-dark-teal flex items-center justify-center">
							<span class="text-white text-lg font-semibold font-primary">Marshan</span>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Marshan</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">12 places</p>
							<p class="text-warm-gray font-primary leading-normal">Historic residential area with stunning views and colonial architecture.</p>
						</div>
					</div>
					<!-- Neighborhood Card 2: Kasbah -->
					<div class="bg-white rounded-xl shadow-card overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
						<div class="h-48 bg-gradient-to-br from-warm-orange to-coral flex items-center justify-center">
							<span class="text-white text-lg font-semibold font-primary">Kasbah</span>
						</div>
						<div class="p-6">
							<h3 class="text-h4 font-semibold font-primary mb-2 text-dark-brown">Kasbah</h3>
							<p class="text-warm-gray text-small mb-3 font-primary">18 places</p>
							<p class="text-warm-gray font-primary leading-normal">Ancient fortress district with museums, palaces, and panoramic views.</p>
						</div>
