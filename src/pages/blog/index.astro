---
import BlogLayout from '../../layouts/BlogLayout.astro';
import { client } from '../../lib/sanity';

const allPosts = await client.fetch(`
  *[_type == "blogPost"] | order(_createdAt desc) {
    _id,
    title,
    slug,
    excerpt,
    author,
    _createdAt
  }
`);
const sortedPosts = allPosts;
---

<BlogLayout title="Blog - City of Tangier" description="Discover the latest stories and insights about Tangier">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Blog</h1>
    <p class="text-xl text-gray-600 mb-12">Stories and insights about Tangier</p>
    
    <div class="space-y-8">
      {sortedPosts.map((post) => (
        <article class="bg-white rounded-lg border border-[#F0F0F0] p-6 transition-all">
          <h2 class="text-2xl font-semibold text-gray-900 mb-3">
            <a href={`/blog/${post.slug.current}`} class="hover:text-teal-600 transition-colors">
              {post.title}
            </a>
          </h2>
          <p class="text-gray-600 mb-4">{post.excerpt}</p>
          <div class="flex items-center justify-between text-sm text-gray-500">
            <span>By {post.author?.name || 'Anonymous'}</span>
            <time datetime={new Date(post._createdAt).toISOString()}>
              {new Date(post._createdAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </article>
      ))}
    </div>
  </div>
</BlogLayout>
