---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SanityContent from '../../components/SanityContent.astro';
import { client, urlFor } from '../../lib/sanity';

export async function getStaticPaths() {
  const posts = await client.fetch(`
    *[_type == "blogPost"] {
      slug
    }
  `);

  return posts.map((post) => ({
    params: { slug: post.slug.current },
  }));
}

const { slug } = Astro.params;

// Fetch the blog post
const post = await client.fetch(
  `*[_type == "blogPost" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    excerpt,
    featuredImage,
    content,
    publishedAt,
    author {
      name,
      bio,
      avatar
    },
    category,
    tags,
    readTime,
    relatedPosts[]-> {
      _id,
      title,
      slug,
      excerpt,
      featuredImage,
      publishedAt
    }
  }`,
  { slug }
);

if (!post) {
  return Astro.redirect('/404');
}

const title = `${post.title} - City of Tangier Blog`;
const description = post.excerpt || post.title;
---

<BaseLayout title={title} description={description} ogImage={post.featuredImage ? urlFor(post.featuredImage).width(1200).height(630).url() : undefined}>
  <article class="bg-white">
    <!-- Hero Section with Featured Image -->
    {post.featuredImage && (
      <div class="relative h-[500px] w-full overflow-hidden">
        <img
          src={urlFor(post.featuredImage).width(1920).height(1080).url()}
          alt={post.featuredImage.alt || post.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>

        <!-- Title Overlay -->
        <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
          <div class="max-w-4xl mx-auto">
            {post.category && (
              <span class="inline-block px-4 py-2 bg-orange-500 text-white text-sm font-semibold rounded-full mb-4">
                {post.category}
              </span>
            )}
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-4">
              {post.title}
            </h1>
          </div>
        </div>
      </div>
    )}

    <!-- Article Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Meta Information -->
      <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-8 pb-8 border-b border-gray-200">
        {post.author && (
          <div class="flex items-center space-x-3">
            {post.author.avatar ? (
              <img
                src={urlFor(post.author.avatar).width(48).height(48).url()}
                alt={post.author.name}
                class="w-12 h-12 rounded-full"
              />
            ) : (
              <div class="w-12 h-12 rounded-full bg-teal-100 flex items-center justify-center">
                <span class="text-teal-700 font-semibold text-lg">
                  {post.author.name.charAt(0)}
                </span>
              </div>
            )}
            <div>
              <p class="font-semibold text-gray-900">{post.author.name}</p>
              {post.author.bio && (
                <p class="text-sm text-gray-500">{post.author.bio}</p>
              )}
            </div>
          </div>
        )}

        <div class="flex items-center space-x-4 ml-auto">
          {post.publishedAt && (
            <time datetime={post.publishedAt} class="flex items-center text-sm">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              {new Date(post.publishedAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          )}
          {post.readTime && (
            <span class="flex items-center text-sm">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              {post.readTime} min read
            </span>
          )}
        </div>
      </div>

      <!-- Article Body -->
      <div class="prose prose-lg max-w-none mb-12">
        {post.content && post.content.length > 0 ? (
          <SanityContent content={post.content} />
        ) : (
          <p class="text-gray-600">Content coming soon...</p>
        )}
      </div>

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-12 pb-12 border-b border-gray-200">
          <span class="text-gray-600 font-semibold mr-2">Tags:</span>
          {post.tags.map((tag) => (
            <a
              href={`/blog?tag=${tag}`}
              class="px-3 py-1 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm rounded-full transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}

      <!-- Author Bio -->
      {post.author && post.author.bio && (
        <div class="bg-teal-50 rounded-xl p-8 mb-12">
          <div class="flex items-start space-x-4">
            {post.author.avatar ? (
              <img
                src={urlFor(post.author.avatar).width(80).height(80).url()}
                alt={post.author.name}
                class="w-20 h-20 rounded-full flex-shrink-0"
              />
            ) : (
              <div class="w-20 h-20 rounded-full bg-teal-200 flex items-center justify-center flex-shrink-0">
                <span class="text-teal-700 font-bold text-2xl">
                  {post.author.name.charAt(0)}
                </span>
              </div>
            )}
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">About {post.author.name}</h3>
              <p class="text-gray-700">{post.author.bio}</p>
            </div>
          </div>
        </div>
      )}

      <!-- Related Posts -->
      {post.relatedPosts && post.relatedPosts.length > 0 && (
        <div class="mt-16">
          <h2 class="text-3xl font-serif font-bold text-gray-900 mb-8">Related Articles</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {post.relatedPosts.slice(0, 3).map((relatedPost) => (
              <article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 group">
                <a href={`/blog/${relatedPost.slug.current}`}>
                  <div class="relative h-48 overflow-hidden">
                    {relatedPost.featuredImage ? (
                      <img
                        src={urlFor(relatedPost.featuredImage).width(600).height(400).url()}
                        alt={relatedPost.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    ) : (
                      <div class="w-full h-full bg-gradient-to-br from-teal-100 to-teal-200 flex items-center justify-center">
                        <span class="text-4xl">üìù</span>
                      </div>
                    )}
                  </div>
                  <div class="p-4">
                    <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-teal-700 transition-colors line-clamp-2">
                      {relatedPost.title}
                    </h3>
                    {relatedPost.excerpt && (
                      <p class="text-sm text-gray-600 line-clamp-2">
                        {relatedPost.excerpt}
                      </p>
                    )}
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      )}

      <!-- Back to Blog -->
      <div class="mt-12 text-center">
        <a
          href="/blog"
          class="inline-flex items-center px-6 py-3 bg-teal-700 hover:bg-teal-800 text-white font-semibold rounded-full transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Blog
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
