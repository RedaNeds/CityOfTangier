---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { client } from '../../../lib/sanity';

// Get all attraction places from Sanity
const seeDoEntries = await client.fetch(`
  *[_type == "place" && (category == "attractions" || category == "See & Do")] | order(title asc) {
    _id,
    title,
    slug,
    description,
    category,
    subcategory,
    rating,
    priceLevel,
    tags,
    highlights,
    neighborhood
  }
`);

// Fallback data
const fallbackAttractions = [
  {
    title: "Kasbah Museum",
    slug: { current: "kasbah-museum" },
    description: "A historic, preserved palace and home to an interesting collection of artifacts from Tangier's rich past.",
    subcategory: "Museum",
    rating: 4.6,
    priceLevel: "‚Ç¨‚Ç¨",
    duration: "1-2 hours",
    tags: ["Museum", "History", "Views"],
    neighborhood: "Kasbah",
    badge: "Museum"
  },
  {
    title: "American Legation Museum",
    slug: { current: "american-legation" },
    description: "First American public property outside US, showcasing art and diplomatic history.",
    subcategory: "Museum",
    rating: 4.5,
    priceLevel: "‚Ç¨",
    duration: "1-2 hours",
    tags: ["Museum", "Art", "History"],
    neighborhood: "Medina",
    badge: "Cultural"
  },
  {
    title: "Tangier Old Medina",
    slug: { current: "medina" },
    description: "Wander through ancient narrow streets and colorful traditional markets in one of Morocco's most vibrant medinas.",
    subcategory: "Historic Sites",
    rating: 4.7,
    priceLevel: "Free",
    duration: "2-3 hours",
    tags: ["Historic Sites", "Shopping", "Culture"],
    neighborhood: "Medina",
    badge: "Must-See"
  },
  {
    title: "Hercules Caves",
    slug: { current: "hercules-caves" },
    description: "Historic caves with stunning Atlantic views where ancient legends come alive.",
    subcategory: "Nature",
    rating: 4.4,
    priceLevel: "‚Ç¨",
    duration: "30 min",
    tags: ["Nature", "Photo", "History"],
    neighborhood: "Cap Spartel",
    badge: "Photo Spot"
  },
  {
    title: "Cap Spartel Lighthouse",
    slug: { current: "cap-spartel" },
    description: "Watch the sun set at the northwestern point of Africa where two seas meet.",
    subcategory: "Landmark",
    rating: 4.6,
    priceLevel: "Free",
    duration: "30 min",
    tags: ["Landmark", "Sunset", "Views"],
    neighborhood: "Cap Spartel",
    badge: "Sunset"
  },
  {
    title: "Achakkar Beach",
    slug: { current: "achakkar-beach" },
    description: "Beautiful sandy beach perfect for relaxing walks and swimming with expansive ocean views.",
    subcategory: "Beach",
    rating: 4.3,
    priceLevel: "Free",
    duration: "2+ hours",
    tags: ["Beach", "Swimming", "Nature"],
    neighborhood: "Achakkar",
    badge: "Beach"
  },
  {
    title: "A Day to Visit",
    slug: { current: "market" },
    description: "Explore vibrant spice stalls and artisan shops in Tangier's traditional market scene.",
    subcategory: "Market",
    rating: 4.5,
    priceLevel: "Free",
    duration: "1-2 hours",
    tags: ["Shopping", "Culture", "Food"],
    neighborhood: "Medina",
    badge: "Market"
  }
];

const attractions = seeDoEntries.length > 0 ? seeDoEntries : fallbackAttractions;

// Group by neighborhood
const byNeighborhood = attractions.reduce((acc, attraction) => {
  const neighborhood = attraction.neighborhood || 'Other';
  if (!acc[neighborhood]) {
    acc[neighborhood] = [];
  }
  acc[neighborhood].push(attraction);
  return acc;
}, {} as Record<string, typeof attractions>);
