---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
  category?: string;
  subcategory?: string;
  tags?: string[];
  featuredImage?: string;
  gallery?: string[];
  rating?: number;
  priceLevel?: string;
  location?: string;
  address?: string;
  coordinates?: {
    lat: number;
    lng: number;
  };
  highlights?: string[];
  contact?: {
    phone?: string;
    email?: string;
    website?: string;
  };
  amenities?: string[];
  accessibility?: {
    wheelchairAccessible?: boolean;
    parking?: boolean;
    wifi?: boolean;
  };
  openingHours?: Array<{
    day: string;
    hours: string;
  }>;
}

const { 
  title = "Place - City of Tangier", 
  description = "Discover amazing places in Tangier",
  category = "attraction",
  subcategory = "general",
  tags = [],
  featuredImage = "/place-default-image.jpg",
  gallery = [],
  rating = 4.5,
  priceLevel = "€€",
  location = "Tangier, Morocco",
  address = "",
  coordinates,
  highlights = [],
  contact = {},
  amenities = [],
  accessibility = {},
  openingHours = []
} = Astro.props;

// Helper function to get category color
function getCategoryColor(category: string): string {
  const colors: { [key: string]: string } = {
    'see-do': 'bg-blue-100 text-blue-800',
    'eat-drink': 'bg-orange-100 text-orange-800',
    'accommodation': 'bg-green-100 text-green-800',
    'shopping': 'bg-purple-100 text-purple-800',
    'transport': 'bg-gray-100 text-gray-800'
  };
  return colors[category] || 'bg-gray-100 text-gray-800';
}

// Helper function to get price level color
function getPriceLevelColor(priceLevel: string): string {
  const colors: { [key: string]: string } = {
    '€': 'bg-green-100 text-green-800',
    '€€': 'bg-yellow-100 text-yellow-800',
    '€€€': 'bg-red-100 text-red-800',
    '€€€€': 'bg-purple-100 text-purple-800'
  };
  return colors[priceLevel] || 'bg-gray-100 text-gray-800';
}

// Helper function to get rating color
function getRatingColor(rating: number): string {
  if (rating >= 4.5) return 'text-green-600';
  if (rating >= 4.0) return 'text-yellow-600';
  if (rating >= 3.0) return 'text-orange-600';
  return 'text-red-600';
}
---

<BaseLayout title={title} description={description}>
  <main class="min-h-screen">
    <!-- Hero Section with Background Image -->
    <section class="relative h-[80vh] min-h-[600px] overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img
          src={featuredImage}
          alt={title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-30"></div>
      </div>
    </section>

    <!-- White Content Card Overlapping Hero -->
    <section class="relative -mt-32 z-10">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <!-- Card Header with Basic Info -->
          <div class="p-8 border-b border-gray-200">
            <!-- Tags -->
            {tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {tags.slice(0, 3).map((tag, index) => (
                  <span key={index} class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            )}

            <!-- Place Title -->
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 font-serif">
              {title}
            </h1>

            <!-- Location and Rating -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-gray-700 font-medium">{location}</span>
              </div>

              <div class="flex items-center gap-2">
                <div class={`flex items-center gap-1 ${getRatingColor(rating)}`}>
                  <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                  </svg>
                  <span class="font-semibold">{rating}</span>
                </div>
                <span class="text-gray-500">(127 reviews)</span>
              </div>
            </div>

            <!-- Description -->
            <p class="text-lg text-gray-700 mb-6 leading-relaxed">
              {description}
            </p>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3">
              <button class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Plan Your Visit
              </button>
              <button class="border-2 border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:border-gray-400 hover:bg-gray-50 transition-all duration-300 flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                Virtual Tour
              </button>
            </div>
          </div>
    
          <!-- Main Content Area with Two Columns -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 p-8">
            <!-- Left Column - Main Content -->
            <div class="lg:col-span-2 space-y-8">
              <slot />
            </div>

            <!-- Right Column - Quick Information -->
            <div class="lg:col-span-1">
              <div class="bg-gray-50 rounded-lg p-6 space-y-6">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Quick Information</h3>

                <!-- Today's Hours -->
                <div>
                  <div class="flex items-center gap-2 mb-2">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="font-semibold text-gray-900">Today</span>
                    <span class="text-green-600 font-medium">9:00 AM - 6:00 PM</span>
                  </div>
                </div>

                <!-- Phone -->
                {contact.phone && (
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <a href={`tel:${contact.phone}`} class="text-blue-600 hover:text-blue-800 font-medium">
                      {contact.phone}
                    </a>
                  </div>
                )}

                <!-- Address -->
                {location && (
                  <div class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-gray-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-gray-700">{location}</span>
                  </div>
                )}

                <!-- Facilities & Amenities -->
                <div>
                  <h4 class="font-semibold text-gray-900 mb-3">Facilities & Amenities</h4>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-sm text-gray-700">Free WiFi</span>
                      <span class="text-green-600 text-sm font-medium">Available</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-sm text-gray-700">Museum Shop</span>
                      <span class="text-green-600 text-sm font-medium">Available</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-sm text-gray-700">Wheelchair Access</span>
                      <span class="text-green-600 text-sm font-medium">Available</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-sm text-gray-700">Photography Allowed</span>
                      <span class="text-green-600 text-sm font-medium">Available</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-sm text-gray-700">Guided Tours</span>
                      <span class="text-green-600 text-sm font-medium">Available</span>
                    </div>
                  </div>
                </div>

                <!-- Address with Map Link -->
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">Address</h4>
                  <p class="text-gray-700 text-sm mb-2">{location}</p>
                  <div class="text-sm space-y-1">
                    <div class="flex justify-between">
                      <span class="text-gray-600">Getting there</span>
                    </div>
                    <div class="text-gray-600">
                      <p>15-20min walk from the medina</p>
                      <p>+212 539 93 20 97</p>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-600">Guided tours available (booking required)</span>
                    </div>
                  </div>
                </div>

                <!-- Visitor Guidelines -->
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">Visitor Guidelines</h4>
                  <ul class="text-sm text-gray-700 space-y-1">
                    <li>• Photography allowed without flash</li>
                    <li>• Please respect the cultural space</li>
                    <li>• Audio guide available in multiple languages</li>
                    <li>• Large bags must be checked at entrance</li>
                    <li>• Food and drinks not permitted in galleries</li>
                    <li>• Mobile phones must be on silent mode</li>
                  </ul>
                </div>

                <!-- Action Buttons -->
                <div class="mt-6">
                  <button class="w-full bg-blue-600 text-white px-4 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors mb-3">
                    Buy Tickets Online
                  </button>
                  {coordinates && (
                    <a
                      href={`https://www.google.com/maps?q=${coordinates.lat},${coordinates.lng}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-full border border-gray-300 text-gray-700 px-4 py-3 rounded-lg font-medium hover:border-gray-400 hover:bg-gray-50 transition-all duration-300 flex items-center justify-center gap-2"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      View on Map
                    </a>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
