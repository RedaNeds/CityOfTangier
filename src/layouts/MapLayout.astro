---
import BaseLayout from './BaseLayout.astro';
import SeoHead from '../components/NavStruct/SeoHead.astro';
import Header from '../components/NavStruct/Header.astro';
import Footer from '../components/NavStruct/footer.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { 
  title, 
  description, 
  image 
} = Astro.props;
---

<BaseLayout>
  <SeoHead 
    title={title}
    description={description}
    image={image}
    type="website"
  />
  
  <Header />
  
  <main class="h-screen pt-16">
    <slot />
  </main>
  
  <Footer />
</BaseLayout>

<style>
  /* Map-specific styles */
  .map-container {
    height: calc(100vh - 4rem);
    width: 100%;
  }
  
  .map-filters-panel {
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
  }
  
  .map-marker {
    transition: all 0.3s ease;
  }
  
  .map-marker:hover {
    transform: scale(1.1);
    z-index: 1000;
  }
  
  .map-popup {
    min-width: 200px;
  }
  
  .map-popup h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  
  .map-popup p {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.5rem;
  }
  
  .map-popup .category {
    display: inline-block;
    background: #3b82f6;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .map-popup .rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.5rem;
  }
  
  .map-popup .stars {
    color: #fbbf24;
  }
  
  .map-popup .price-level {
    color: #059669;
    font-weight: 500;
  }
  
  /* Filter panel styles */
  .filter-section {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem;
  }
  
  .filter-section:last-child {
    border-bottom: none;
  }
  
  .filter-section h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
  }
  
  .filter-option {
    display: flex;
    align-items: center;
    padding: 0.5rem 0;
    cursor: pointer;
    transition: color 0.2s ease;
  }
  
  .filter-option:hover {
    color: #3b82f6;
  }
  
  .filter-option input[type="checkbox"] {
    margin-right: 0.5rem;
  }
  
  .filter-option .count {
    margin-left: auto;
    background: #f3f4f6;
    color: #6b7280;
    padding: 0.125rem 0.375rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
  }
  
  .filter-option.active .count {
    background: #3b82f6;
    color: white;
  }
  
  /* Map legend styles */
  .map-legend {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .legend-item:last-child {
    margin-bottom: 0;
  }
  
  .legend-color {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    margin-right: 0.5rem;
  }
  
  .legend-label {
    font-size: 0.875rem;
    color: #374151;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .map-filters-panel {
      position: absolute;
      top: 0;
      left: -100%;
      width: 80%;
      height: 100vh;
      background: white;
      z-index: 1000;
      transition: left 0.3s ease;
    }
    
    .map-filters-panel.open {
      left: 0;
    }
    
    .map-container {
      height: calc(100vh - 4rem);
    }
  }
</style>
