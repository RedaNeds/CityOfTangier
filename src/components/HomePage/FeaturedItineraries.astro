---
import { client } from '../../lib/sanity';

let itineraries = [];

try {
  itineraries = await client.fetch(`
    *[_type == "itinerary"] | order(publishedAt desc)[0...3] {
      _id,
      title,
      slug,
      description,
      featuredImage { asset->{ url } },
      duration
    }
  `);
} catch (error) {
  console.error('Error fetching itineraries:', error);
}
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-serif font-bold text-gray-900 mb-4">
        Curated Itineraries
      </h2>
      <p class="text-xl text-gray-600">
        Ready-made plans for your perfect day
      </p>
    </div>

    {itineraries.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {itineraries.map((itinerary) => (
          <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow">
            <div class="relative h-56">
              <img
                src={itinerary.featuredImage?.asset?.url || '/placeholder.jpg'}
                alt={itinerary.title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6">
              {itinerary.duration && (
                <div class="text-sm text-blue-600 font-semibold mb-2">
                  {itinerary.duration}
                </div>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-2">{itinerary.title}</h3>
              <p class="text-gray-600 mb-4 line-clamp-2">{itinerary.description}</p>
              <a
                href={`/itineraries/${itinerary.slug.current}`}
                class="text-blue-600 hover:text-blue-800 font-semibold"
              >
                View itinerary â†’
              </a>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <p class="text-center text-gray-500">No itineraries available yet.</p>
    )}

    <div class="text-center mt-12">
      <a
        href="/itineraries"
        class="inline-block bg-blue-600 text-white px-8 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors"
      >
        View All Itineraries
      </a>
    </div>
  </div>
</section>
