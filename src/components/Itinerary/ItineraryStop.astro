---
import type { ItineraryStop } from '../../lib/itinerary-data.ts';

export interface Props {
  stop: ItineraryStop;
}

const { stop } = Astro.props;
---

<div class="flex items-start space-x-4">
  <div class="w-8 h-8 bg-teal-600 text-white rounded-full flex items-center justify-center text-sm font-bold flex-shrink-0 mt-1">
    {stop.id}
  </div>
  <div class="flex-1">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{stop.title}</h3>
    <p class="text-gray-600 mb-3">{stop.description}</p>
    
    {stop.tags && stop.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-3">
        {stop.tags.map(tag => (
          <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">{tag}</span>
        ))}
      </div>
    )}
    
    <div class="text-sm text-gray-500">
      <span class="font-medium">Duration:</span> {stop.duration} â€¢ 
      <span class="font-medium">Cost:</span> {stop.cost} â€¢ 
      <span class="font-medium">Best time:</span> {stop.bestTime}
    </div>
    
    {stop.tips && stop.tips.length > 0 && (
      <div class="mt-3 p-3 bg-blue-50 rounded-lg">
        <h4 class="text-sm font-medium text-blue-900 mb-2">ðŸ’¡ Tips:</h4>
        <ul class="text-sm text-blue-800 space-y-1">
          {stop.tips.map(tip => (
            <li class="flex items-start">
              <span class="text-blue-600 mr-2 mt-0.5">â€¢</span>
              <span>{tip}</span>
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>
</div>
