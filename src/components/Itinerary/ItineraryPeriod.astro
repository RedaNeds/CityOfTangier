---
import type { ItineraryPeriod } from '../../lib/itinerary-data.ts';
import ItineraryStop from './ItineraryStop.astro';

export interface Props {
  period: ItineraryPeriod;
}

const { period } = Astro.props;

const colorClasses = {
  orange: 'bg-orange-100 text-orange-600',
  blue: 'bg-blue-100 text-blue-600',
  purple: 'bg-purple-100 text-purple-600',
  green: 'bg-green-100 text-green-600',
  red: 'bg-red-100 text-red-600',
  teal: 'bg-teal-100 text-teal-600'
};
---

<div class="bg-white rounded-2xl border border-[#F0F0F0] p-8">
  <div class="flex items-center mb-6">
    <div class={`w-12 h-12 ${colorClasses[period.color as keyof typeof colorClasses] || 'bg-gray-100 text-gray-600'} rounded-full flex items-center justify-center mr-4`}>
      <span class="font-bold text-xl">{period.icon}</span>
    </div>
    <h2 class="text-2xl font-bold text-gray-900">{period.title} ({period.timeRange})</h2>
  </div>
  
  <div class="space-y-6">
    {period.stops.map(stop => (
      <ItineraryStop stop={stop} />
    ))}
  </div>
</div>
